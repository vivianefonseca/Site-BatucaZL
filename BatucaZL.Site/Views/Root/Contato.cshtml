                <label for="nome">Seu Nome: </label>
                <input type="text" class="form-control" v-model="nome" autofocus name="nome"/>
            </div>
            <div class="form-group">
                <label for="email">E-mail: </label>
                <input type="text" class="form-control" v-model="email" autofocus name="email" />
